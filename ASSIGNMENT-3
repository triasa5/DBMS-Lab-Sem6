SELECT * FROM EMP_50;

1)
SELECT ENAME FROM EMP_50 WHERE JOB <> 'Manager';

2)
SELECT ENAME FROM EMP_50 WHERE ENAME LIKE '_i%';

3)
SELECT COUNT(*) AS Number_of_Managers FROM EMP_50 WHERE JOB = 'Manager'; 

4) 
SELECT MAX(SAL) AS Maximum, MIN(SAL) AS Minimum, SUM(SAL) AS Total, AVG(SAL) AS Average FROM EMP_50;

5)
SELECT JOB, MAX(SAL) AS Maximum, MIN(SAL) AS Minimum, SUM(SAL) AS Total, AVG(SAL) AS Average FROM EMP_50 GROUP BY JOB;

6)
SAME AS 3

7)
SELECT * FROM EMP_50 WHERE HIREDATE > TO_DATE('01-jan-1980');

8)
SELECT ENAME FROM EMP_50 WHERE JOB = 'Salesman' and SAL = (SELECT MAX(SAL) FROM EMP_50 WHERE JOB = 'Salesman');

9)
SELECT ENAME FROM EMP_50 WHERE JOB = 'Clerk' and SAL = (SELECT MIN(SAL) FROM EMP_50 WHERE JOB = 'Clerk');

10) 
SELECT ENAME FROM EMP_50 WHERE SAL > (SELECT SAL FROM EMP_50 WHERE ENAME = 'Turner');

11)
SELECT DEPT_NAME FROM EMP_50 WHERE ENAME = 'Ford';

12) 
SELECT DEPT_NAME FROM EMP_50 WHERE SAL = (SELECT MAX(SAL) FROM EMP_50);
